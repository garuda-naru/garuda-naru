import textwrap

def wrap(string, max_width):
    string = string
    max_width=max_width
    wrapped_lines = textwrap.wrap(string,max_width)
    
    return textwrap.fill(string,max_width)

if __name__ == '__main__':
    string, max_width = input(), int(input())
    result = wrap(string, max_width)
    print(result)
